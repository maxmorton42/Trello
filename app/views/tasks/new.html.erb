<h1> Add A Task </h1>
<%= form_with(model: [@list, @task], local: true, class: "ui form") do |t| %>
  <%= t.label :name %>
  <%= t.text_field :name, required: true %>
  <br />
  <%= t.label :description %>
  <%= t.text_area :description %>
  <br />
  <br />
  <%= t.submit nil, class: "ui button blue" %>
  <% end %>
